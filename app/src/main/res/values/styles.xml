<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <item name="android:windowBackground">@color/bg_grey</item>
    </style>

    <style name="AppTheme.Translucent" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>

    <style name="AppTheme.Translucent.Fullscreen" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>

    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:activityOpenEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/keep</item>
        <item name="android:activityCloseEnterAnimation">@anim/keep</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="quick_scale_anim">
        <item name="android:windowEnterAnimation">@anim/scale_alpha_enter_200</item>
        <item name="android:windowExitAnimation">@anim/scale_alpha_exit_200</item>
    </style>

    <style name="undo_alpha_anim">
        <item name="android:windowEnterAnimation">@anim/alpha_enter_200</item>
        <item name="android:windowExitAnimation">@anim/alpha_exit_2000</item>
    </style>

    <style name="dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="dialog_style_no_dim" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:background">#00000000</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>