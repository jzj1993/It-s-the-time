<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="top"
    android:background="@color/bg_grey" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.jzj.alarm.HexListView
            xmlns:myattr="http://schemas.android.com/apk/res/com.jzj.alarm"
            android:id="@+id/hexgroup_main_container"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layoutAnimation="@anim/layout_anim_scale" >
        </com.jzj.alarm.HexListView>

        <FrameLayout
            android:id="@+id/layout_main_img_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <com.jzj.alarm.ScaleImageView
                android:id="@+id/img_main_theme_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:alpha="0.3"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/theme_sweet_candy" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:alpha="0.85"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/pic_main_mask" />
        </FrameLayout>
    </LinearLayout>

</ScrollView>