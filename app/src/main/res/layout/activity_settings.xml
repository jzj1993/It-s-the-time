<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/radiogroup_setting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio_setting_0"
            android:layout_marginRight="1dp"
            android:layout_weight="1.0"
            android:background="@drawable/selector_setting_radio"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:minHeight="60dp"
            android:paddingBottom="5dp"
            android:paddingLeft="0dp"
            android:paddingTop="5dp"
            android:text="@string/set_radio_0"
            android:textColor="#A2A2A2"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radio_setting_1"
            android:layout_marginLeft="1dp"
            android:layout_weight="1.0"
            android:background="@drawable/selector_setting_radio"
            android:button="@null"
            android:gravity="center"
            android:minHeight="60dp"
            android:paddingBottom="5dp"
            android:paddingLeft="0dp"
            android:paddingTop="5dp"
            android:text="@string/set_radio_1"
            android:textColor="#A2A2A2"
            android:textSize="20sp" />
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_setting"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>